{
  "info": {
    "name": "TaskManager API",
    "_postman_id": "taskmanager-collection",
    "description": "Basic requests for auth and tasks",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "item": [
    {
      "name": "Register",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"name\": \"John\", \"email\": \"john@example.com\", \"password\": \"pass\" }" },
        "url": { "raw": "{{baseUrl}}/register", "host": ["{{baseUrl}}"], "path": ["register"] }
      }
    },
    {
      "name": "Login",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }],
        "body": { "mode": "raw", "raw": "{ \"email\": \"john@example.com\", \"password\": \"pass\" }" },
        "url": { "raw": "{{baseUrl}}/login", "host": ["{{baseUrl}}"], "path": ["login"] }
      }
    },
    {
      "name": "Fetch Tasks",
      "request": {
        "method": "GET",
        "header": [{ "key": "Authorization", "value": "Bearer {{token}}" }],
        "url": { "raw": "{{baseUrl}}/tasks?user_id=1", "host": ["{{baseUrl}}"], "path": ["tasks"], "query": [{ "key": "user_id", "value": "1" }] }
      }
    },
    {
      "name": "Create Task",
      "request": {
        "method": "POST",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{ \"user_id\":1, \"title\": \"New Task\", \"description\": \"Details\", \"status\": \"pending\" }" },
        "url": { "raw": "{{baseUrl}}/tasks", "host": ["{{baseUrl}}"], "path": ["tasks"] }
      }
    },
    {
      "name": "Update Task",
      "request": {
        "method": "PUT",
        "header": [{ "key": "Content-Type", "value": "application/json" }, { "key": "Authorization", "value": "Bearer {{token}}" }],
        "body": { "mode": "raw", "raw": "{ \"title\": \"Updated\", \"description\": \"Updated\", \"status\": \"Completed\" }" },
        "url": { "raw": "{{baseUrl}}/tasks/1", "host": ["{{baseUrl}}"], "path": ["tasks","1"] }
      }
    }
   
  ],
  "variable": [
    { "key": "baseUrl", "value": "http://10.0.2.2/task_manager/index.php" },
    { "key": "token", "value": "" }
  ]
}
